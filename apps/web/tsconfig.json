{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"],
      "@repo/types": ["../../packages/types/src/index.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "composite": true,
    "noEmit": false,
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "../../packages/types/src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
